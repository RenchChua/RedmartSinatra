<h3>Change Stuff about this category</h3>

<form action="/categories/<%=@edit_category[:id]%>" method="post">
    <input type="hidden" name="_method" value="put">
    <div class="container">
        <div class="form-group col-sm-6">
            <label for="name" class="control-label">Category Name:</label>
            <input type="text" name="category[name]" value="<%=@edit_category[:name]%>" id="name" class="form-control">
        </div>
    </div>
    <div class="col-sm-6">
        <input type="submit" value="Change ME!!!" class='btn btn-block'>
    </div>
</form>
